PKG_NAME="ssh-keysonly"
PKG_VERSION="1.0"
PKG_REV="0"
PKG_ARCH="any"
PKG_LICENSE="GPL"
PKG_SITE="http://openelec.tv"
PKG_URL=""
PKG_DEPENDS=""
PKG_BUILD_DEPENDS=""
PKG_PRIORITY="optional"
PKG_SECTION="service/system"
PKG_SHORTDESC="Disable password logins from ssh"
PKG_LONGDESC="This addons disabled password logins from ssh. Generate a keypair and test you can login with it before using this addon. Uninstall addon to get back normal ssh."
PKG_IS_ADDON="yes"
PKG_ADDON_TYPE="xbmc.service"

PKG_AUTORECONF="no"
