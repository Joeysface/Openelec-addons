PKG_NAME="fceu"
PKG_VERSION="2.1.5"
PKG_REV="0"
PKG_ARCH="any"
PKG_LICENSE="OSS"
PKG_SITE="http://fceux.com/"
PKG_URL="$SOURCEFORGE_SRC/project/fceultra/Source%20Code/2.1.5%20src/fceux-2.1.5.src.tar.bz2"
PKG_DEPENDS="zlib libX11 SDL SDL_image SDL_mixer $MESA"
PKG_BUILD_DEPENDS="toolchain zlib libX11 SDL SDL_image SDL_mixer $MESA scons"
PKG_PRIORITY="optional"
PKG_SECTION="emulator"
PKG_SHORTDESC="fceux"
PKG_LONGDESC="fceux is a Nintendo NES emulator. This addon only installs the binary, you need e.g. advanced launcher addon to launch roms!"
PKG_ADDON_TYPE="xbmc.python.script"
PKG_IS_ADDON="yes"

PKG_AUTORECONF="no"
