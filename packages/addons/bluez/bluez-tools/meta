PKG_NAME="bluez-tools"
PKG_VERSION="0.1.38-662e"
PKG_REV="0"
PKG_ARCH="any"
PKG_LICENSE="GPL2"
PKG_SITE="http://bluez-tools.googlecode.com"
PKG_URL="http://bluez-tools.googlecode.com/files/$PKG_NAME-$PKG_VERSION.tar.gz"
PKG_DEPENDS="dbus glib dbus-glib"
PKG_BUILD_DEPENDS="toolchain dbus glib dbus-glib readline"
PKG_PRIORITY="optional"
PKG_SECTION="shell/bluez"
PKG_SHORTDESC="A set of tools to manage bluetooth devices for linux"
PKG_LONGDESC="This is a GSoC project to implement a set of new command line tools for bluez. The project is implemented in C and uses the D-Bus interface of bluez."

PKG_IS_ADDON="yes"
PKG_ADDON_TYPE="xbmc.python.script"

PKG_AUTORECONF="no"
